<body>
  <div class="wrap">
    <div class="title">Vertical Lift Bridge Control <span class="pill" id="status">Disconnected</span></div>
    <div class="subtitle">Send OPEN / CLOSE / STOP commands to your ESP32 and see live status.</div>

    <div class="card" style="margin-top:1rem;">
      <div class="grid">
        <div>
          <div class="row">
            <input id="host" placeholder="ESP32 host (e.g. 192.168.1.42)" />
            <input id="proto" value="http" style="max-width:120px" />
            <button class="btn" onclick="saveHost()">Save</button>
          </div>
          <div class="row" style="margin-top:.5rem;">
            <button class="btn primary" onclick="sendCmd('open')">OPEN</button>
            <button class="btn" onclick="sendCmd('close')">CLOSE</button>
            <button class="btn warn" onclick="sendCmd('stop')">STOP</button>
          </div>
          <div class="sep"></div>
          <div class="stat"><span>Motion</span><strong id="motion">-</strong></div>
          <div class="stat"><span>Top Limit</span><strong id="top">-</strong></div>
          <div class="stat"><span>Bottom Limit</span><strong id="bot">-</strong></div>
          <div class="stat"><span>Uptime</span><strong id="uptime">-</strong></div>
        </div>

        <div>
          <div style="display:flex; justify-content:space-between; align-items:center;">
            <div class="pill">State feed</div>
            <select id="poll" onchange="setPoll()">
              <option value="800">Refresh: 0.8s</option>
              <option value="1500" selected>Refresh: 1.5s</option>
              <option value="2500">Refresh: 2.5s</option>
              <option value="0">Refresh: Off</option>
            </select>
          </div>
          <div class="log" id="log"></div>
          <div class="subtitle" style="margin-top:.25rem;">
          //  Note: If this page is hosted separately from the ESP32, your ESP32 must send CORS headers for <code>/api/*</code>
            (e.g. <code>Access-Control-Allow-Origin: *</code>), or serve this file directly from the ESP32.
          </div>
        </div>
      </div>
    </div>

    <div class="subtitle" style="margin-top:1rem;">
      Endpoints used: <code>/api/command?cmd=open|close|stop</code> and <code>/api/state</code> returning JSON.<br/>
      ESP32 example firmware available upon request.
    </div>
  </div>

<script>
let baseUrl = "";
let pollTimer = null;

function $(id){ return document.getElementById(id); }
function log(s){ const el=$('log'); el.textContent += s + "\n"; el.scrollTop = el.scrollHeight; }
function setStatus(s){ $('status').textContent = s; }

function loadHost(){
  const saved = localStorage.getItem('bridge_host') || "";
  const proto = localStorage.getItem('bridge_proto') || "http";
  $('host').value = saved;
  $('proto').value = proto;
  configureBaseUrl();
}
function saveHost(){
  localStorage.setItem('bridge_host', $('host').value.trim());
  localStorage.setItem('bridge_proto', $('proto').value.trim() || 'http');
  configureBaseUrl();
  ping();
}
function configureBaseUrl(){
  const host = $('host').value.trim();
  const proto = $('proto').value.trim() || 'http';
  baseUrl = host ? `${proto}://${host}` : "";
}

async function fetchState(){
  if (!baseUrl){ setStatus('No host'); return; }
  try {
    const res = await fetch(`${baseUrl}/api/state`, { method:'GET' });
    if (!res.ok) throw new Error('HTTP '+res.status);
    const data = await res.json();
    $('motion').textContent = data.motion ?? '-';
    $('top').textContent = (data.top_limit ? 'HIT' : 'clear');
    $('bot').textContent = (data.bottom_limit ? 'HIT' : 'clear');
    $('uptime').textContent = ((data.uptime_ms||0)/1000|0) + 's';
    setStatus('Connected');
  } catch (e) {
    setStatus('Disconnected');
  }
}

async function sendCmd(cmd){
  if (!baseUrl) return alert('Set ESP32 host first.');
  try {
    const res = await fetch(`${baseUrl}/api/command?cmd=${encodeURIComponent(cmd)}`, { method:'GET' });
    const data = await res.json().catch(()=>({}));
    if (res.ok && data.ok === true){
      log(`â†’ command: ${cmd}`);
      fetchState();
    } else {
      log(`! command failed: ${cmd} (${data.error||res.status})`);
      alert('Command failed.');
    }
  } catch (e) {
    log('! network error sending '+cmd);
    alert('Network error.');
  }
}

function setPoll(){
  const v = parseInt($('poll').value,10);
  if (pollTimer) { clearInterval(pollTimer); pollTimer = null; }
  if (v > 0){
    pollTimer = setInterval(fetchState, v);
  }
}

async function ping(){
  await fetchState();
}

loadHost();
setPoll();
</script>
</body>
</html>

